{
  "compilerOptions": {
    "sourceMap": true,
    "allowJs": false,
    "noEmit": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "es2017", "esnext.asynciterable", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "esnext",
    "strict": true,
    "plugins": [{ "name": "babel-plugins-styled-components" }]
  },
  "include": ["./src/**/*"]
}
